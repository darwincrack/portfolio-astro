---

import '../styles/main.css';
import 'bootstrap/dist/css/bootstrap.css';
import '@fortawesome/fontawesome-free/css/all.min.css';

// Importar Poppins localmente
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

// Opcional: Agregar JetBrains Mono para secciones de código
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/500.css';

// Agregar CSS para los temas
const darkThemeColors = {
  primary: '#0f172a',    // Dark blue
  secondary: '#1e293b',  // Slightly lighter blue
  text: '#f8fafc',      // Light gray
  accent: '#0ea5e9',    // Sky blue
  gradient1: '#0ea5e9', // Sky blue
  gradient2: '#2563eb', // Blue
  gradient3: '#4f46e5', // Indigo
};

const lightThemeColors = {
  primary: '#f8fafc',    // Light gray
  secondary: '#f1f5f9',  // Slightly darker gray
  text: '#0f172a',      // Dark blue
  accent: '#0ea5e9',    // Sky blue
  gradient1: '#0ea5e9', // Sky blue
  gradient2: '#2563eb', // Blue
  gradient3: '#4f46e5', // Indigo
};

const defaultTitle = 'Darwin Cedeño - Desarrollador Web Freelance en Venezuela';
const defaultDescription = 'Desarrollador web freelance en Venezuela. Experto en PHP, Javascript, WordPress, Laravel, React y más, dedicado a impulsar tu negocio online. Conoce mis proyectos y servicios.';

const { 
  title = defaultTitle, 
  description = defaultDescription,
  image = 'https://darwincd.com/logodc.jpg',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = 'Darwin Cedeño',
  section
} = Astro.props;

// Construir URL canónica
const siteUrl = 'https://darwincd.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogUrl = canonicalUrl;

// Función para optimizar títulos (50-60 caracteres recomendado)
function optimizeTitle(title: string, maxLength: number = 60): string {
  if (title.length <= maxLength) return title;
  // Truncar en el último espacio antes del límite para evitar cortar palabras
  const truncated = title.substring(0, maxLength);
  const lastSpace = truncated.lastIndexOf(' ');
  return lastSpace > 0 ? truncated.substring(0, lastSpace) + '...' : truncated + '...';
}

const optimizedTitle = optimizeTitle(title);

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

---

<!DOCTYPE html>
<html lang="es" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    {/* Preconnect para recursos externos */}
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    
    {/* Favicon */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/logodc.png" />
    
    {/* URL Canónica */}
    <link rel="canonical" href={canonicalUrl} />
    
    <title>{optimizedTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Darwin Cedeño">
    <meta name="robots" content="index, follow">
    
    {/* Open Graph / Facebook */}
    <meta property="og:type" content={type}>
    <meta property="og:url" content={ogUrl}>
    <meta property="og:title" content={optimizedTitle}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={image}>
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Darwin Cedeño" />
    
    {/* Twitter Card */}
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={ogUrl}>
    <meta property="twitter:title" content={optimizedTitle}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={image}>
    
    {/* Meta tags para artículos (si aplica) */}
    {type === 'article' && publishedTime && (
      <>
        <meta property="article:published_time" content={publishedTime} />
        {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
        <meta property="article:author" content={author} />
        {section && <meta property="article:section" content={section} />}
      </>
    )}

    {/* Schema.org - WebSite */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Darwin Cedeño",
      "url": "https://darwincd.com",
      "description": "Desarrollador web freelance en Venezuela. Experto en PHP, Javascript, WordPress, Laravel, React y más, dedicado a impulsar tu negocio online. Conoce mis proyectos y servicios.",
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://darwincd.com/blog/?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    })} />
    
    {/* Schema.org - Person */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Darwin Cedeño",
      "url": "https://darwincd.com",
      "jobTitle": "Desarrollador Web Full Stack",
      "description": "Desarrollador web freelance especializado en PHP, JavaScript, WordPress, Laravel, React y Node.js",
      "sameAs": [
        "https://github.com/darwincrack/",
        "https://www.linkedin.com/in/darwincrack/",
        "https://www.instagram.com/darwinc.dev/"
      ],
      "knowsAbout": [
        "Desarrollo Web",
        "PHP",
        "JavaScript",
        "WordPress",
        "Laravel",
        "React",
        "Node.js",
        "MySQL",
        "SEO"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "VE"
      }
    })} />

    <style is:global>
      :root[data-theme="light"] {
        --primary-bg: #f8fafc;
        --secondary-bg: #f1f5f9;
        --text: #0f172a;
        --gradient-1: #0ea5e9;
        --gradient-2: #2563eb;
        --gradient-3: #4f46e5;
      }
      
      :root[data-theme="dark"] {
        --primary-bg: #0f172a;
        --secondary-bg: #1e293b;
        --text: #f8fafc;
        --gradient-1: #0ea5e9;
        --gradient-2: #2563eb;
        --gradient-3: #4f46e5;
      }

      body {
        background-color: var(--primary-bg);
        color: var(--text);
      }

      /* Forzar estilos sobre Bootstrap */
      .bg-white {
        background-color: var(--primary-bg) !important;
      }

      .navbar {
        background-color: var(--secondary-bg) !important;
      }
    </style>
    <style is:global>
      :root {
        --font-primary: 'Poppins', sans-serif;
      }
      
      body {
        font-family: var(--font-primary);
      }
    </style>


<!-- Google tag (gtag.js) -->
