---
// Importar el componente Image de Astro
import { Image } from 'astro:assets';

import Navigation from './Navigation.astro';
import ParticlesBackground from './ParticlesBackground.astro';
import azureBadge from '../images/badges/microsoft-certified-azure-fundamentals.avif';
import pmBadge from '../images/badges/certificado-de-gestion-de-proyectos-de-google.avif';
import aiBadge from '../images/badges/google-ai-essentials.avif';
---

<header class="header">
  <ParticlesBackground/>
  <Navigation />

  <!-- Hero Section -->
  <div class="hero-section">
    <div class="container text-center">
      <h1 class="main-title glow-effect" style="visibility: visible">Darwin Cedeño</h1>
      <h2 class="subtitle">Full Stack Developer</h2>
      <p class="technologies">
        PHP • JavaScript • WordPress • Laravel • React • Node.js  • MySQL
      </p>
      
      <!-- Certificaciones con imágenes -->
      <div class="certifications-badges">
        {[
          {
            url: "https://www.credly.com/badges/7f36d2ec-e6eb-4d9a-bfa1-8ba960a750af/public_url",
            img: azureBadge,
            alt: "Microsoft Certified: Azure Fundamentals",
            title: "Microsoft Certified: Azure Fundamentals"
          },
          {
            url: "https://www.credly.com/badges/583f34eb-f507-48f0-9865-7a09fb730dda/public_url",
            img: pmBadge,
            alt: "Certificado de gestión de proyectos de Google",
            title: "Certificado de gestión de proyectos de Google"
          },
          {
            url: "https://www.credly.com/badges/4252e689-70c1-40e8-b539-d3f1f0e7e00d/public_url",
            img: aiBadge,
            alt: "Google AI Essentials",
            title: "Google AI Essentials"
          }
        ].map((badge, index) => (
          <a href={badge.url} 
             target="_blank" 
             rel="noopener"
             title={badge.title}>
            <Image 
              src={badge.img} 
              alt={badge.alt}
              width={90}
              height={90}
              loading={index === 0 ? "eager" : "lazy"}
              decoding={index === 0 ? "sync" : "async"}
              format="avif"
              quality={90}
            />
          </a>
        ))}
      </div>

      <div class="social-links">
        <a href="https://github.com/darwincrack/" class="social-link" title="GitHub" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>
        <a href="https://www.linkedin.com/in/darwincrack/" class="social-link" title="LinkedIn" target="_blank">
          <i class="fa-brands fa-linkedin"></i>
        </a>
        <a href="https://www.instagram.com/darwinc.dev" class="social-link" title="Instagram" target="_blank">
          <i class="fa-brands fa-instagram"></i>
        </a>
      </div>
      <div class="cta-container">
        <a href="#contact-section" class="contact-btn">Contáctame</a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Variables de color actualizadas basadas en la web de referencia */
  :root {
    --gradient-1: #0ea5e9;  /* Sky blue */
    --gradient-2: #2563eb;  /* Blue */
    --gradient-3: #4f46e5;  /* Indigo */
    --background: #0f172a;  /* Dark blue */
    --text: #f8fafc;       /* Light gray */
    --navbar-bg-initial: rgba(15, 23, 42, 0.8);
    --navbar-bg-scrolled: #0f172a;
    --navbar-text-light: #0f172a;  /* Color texto para modo claro */
    --navbar-text-dark: #f8fafc;   /* Color texto para modo oscuro */
  }

  .header {
    background-color: var(--background);
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  #particles-js {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .navbar, .hero-section {
    position: relative;
    z-index: 2;
  }

  /* Logo */
  .logo {
    position: relative;
    z-index: 2;
    text-decoration: none;
  }

  .logo-path {
    fill: none;
    stroke: var(--gradient-1);
    stroke-width: 2;
    transition: all 0.3s ease;
  }

  .logo-text {
    fill: var(--text);
    font-size: 16px;
    font-weight: bold;
    font-family: 'Inter', sans-serif;
  }

  .logo:hover .logo-path {
    stroke: var(--gradient-3);
    transform: rotate(45deg);
  }

  /* Actualización de estilos existentes */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: var(--navbar-bg-initial) !important;
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .navbar.scrolled {
    background-color: var(--navbar-bg-scrolled) !important;
  }

  .navbar.scrolled .nav-link {
    color: white !important;
    opacity: 0.9;
  }

  .navbar.scrolled .nav-link:hover {
    opacity: 1;
    color: var(--gradient-1) !important;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .logo-text {
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 1.5rem;
    font-weight: 700;
    padding: 0.5rem;
    border: 2px solid transparent;
    border-image: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    border-image-slice: 1;
    transition: all 0.3s ease;
  }

  .logo:hover .logo-text {
    transform: translateY(-2px);
    text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
    padding-left: 3rem;
  }

  .nav-link {
    color: white !important;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0.9;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    opacity: 1;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .hero-section {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: calc(80px + 4rem);
    padding-bottom: 2rem;
    color: #f8fafc !important; /* Color claro fijo */
  }

  .main-title,
  .subtitle,
  .technologies {
    color: #f8fafc !important; /* Forzar color claro siempre */
  }

  /* Remover cualquier estilo específico del modo claro para estos elementos */
  html[data-theme="light"] .hero-section .subtitle,
  html[data-theme="light"] .hero-section .technologies,
  html[data-theme="light"] .hero-section .main-title {
    color: #f8fafc !important;
  }

  /* Mantener los demás estilos sin cambios */
  .subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .technologies {
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .social-link {
    color: var(--text);
    font-size: 1.25rem;
    transition: color 0.3s ease;
  }
  
  .social-link:hover {
    color: var(--gradient-1);
  }

  .contact-btn {
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    color: var(--text);
    padding: 0.75rem 2.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
  }

  .main-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--text);
    margin: 0 0 1rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
    animation: slideInDown 0.8s ease-out forwards,
             glow 3s ease-in-out infinite 0.8s;
  }

  @keyframes slideInDown {
    0% {
      opacity: 0;
      transform: translateY(-30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes glow {
    0%, 100% {
      text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
      color: var(--text);
    }
    50% {
      text-shadow: 0 0 20px rgba(14, 165, 233, 0.5),
                   0 0 30px rgba(14, 165, 233, 0.3);
      color: #ffffff;
    }
  }

  .cta-container {
    margin-top: 2rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 1.5rem 0;
  }

  .social-link {
    color: #f8fafc !important; /* Color fijo claro */
    font-size: 1.5rem;
    transition: all 0.3s ease;
    opacity: 0.8;
  }
  
  .social-link:hover {
    color: var(--gradient-1) !important;
    transform: translateY(-2px);
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-section {
      padding-top: calc(60px + 2rem); /* Ajuste para móviles */
    }

    .main-title {
      font-size: clamp(2rem, 6vw, 3.5rem);
      margin-bottom: 0.5rem;
    }
    
    .subtitle {
      font-size: 1.5rem;
    }

    .contact-btn {
      padding: 0.75rem 2rem;
      font-size: 1rem;
    }

    .nav-links {
      display: none; /* En móvil necesitarás un menú hamburguesa */
    }

    /* Agregar botón de menú hamburguesa */
    .menu-toggle {
      display: block;
      font-size: 1.5rem;
      color: var(--text);
      cursor: pointer;
    }
  }

  /* Estilos para el menú móvil */
  @media (max-width: 768px) {
    .nav-links.active {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: rgba(15, 23, 42, 0.95);
      padding: 1rem;
      gap: 1rem;
      backdrop-filter: blur(10px);
    }
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo {
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
    padding-left: 3rem;
  }

  .theme-toggle {
    background: none;
    border: none;
    color: var(--text);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    opacity: 0.8;
    transition: all 0.3s ease;
    margin-left: 1rem;
  }

  .theme-toggle:hover {
    opacity: 1;
    color: var(--gradient-1);
    transform: rotate(15deg);
  }

  .theme-toggle i {
    font-size: 1.1rem;
  }

  /* Ajustes para modo claro */
  :root[data-theme="light"] .navbar {
    background-color: rgba(248, 250, 252, 0.85) !important;
    border-bottom: 1px solid rgba(15, 23, 42, 0.1);
  }

  :root[data-theme="light"] .navbar.scrolled {
    background-color: #f8fafc !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  :root[data-theme="light"] .nav-link,
  :root[data-theme="light"] .theme-toggle {
    color: var(--navbar-text-light) !important;
  }

  /* Ajustes para el hero section en modo claro */
  :root[data-theme="light"] .subtitle {
    color: #0f172a !important; /* Azul oscuro para mejor contraste */
  }

  :root[data-theme="light"] .technologies {
    color: #1e293b !important; /* Azul oscuro con mejor contraste */
    opacity: 0.95; /* Aumentada la opacidad para más contraste */
    font-weight: 600; /* Texto más grueso en modo claro */
  }

  /* Opcional: Añadir un sutil text-shadow para mejorar la legibilidad */
  :root[data-theme="light"] .subtitle,
  :root[data-theme="light"] .technologies {
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
  }

  /* Estilos base */
  .subtitle {
    color: var(--text);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }

  .technologies {
    color: var(--text);
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.9;
    margin-bottom: 2rem;
    transition: color 0.3s ease;
  }

  /* Ajustes específicos para modo claro con selectores más específicos */
  html[data-theme="light"] .hero-section .subtitle {
    color: #0f172a !important;
  }

  html[data-theme="light"] .hero-section .technologies {
    color: #0f172a !important;
    opacity: 1 !important;
    font-weight: 600 !important;
  }

  /* Ajustes para el navbar en modo claro */
  html[data-theme="light"] .navbar {
    background-color: rgba(248, 250, 252, 0.85) !important;
  }

  html[data-theme="light"] .navbar .nav-link,
  html[data-theme="light"] .navbar .theme-toggle {
    color: #0f172a !important;
  }

  html[data-theme="light"] .navbar.scrolled {
    background-color: #f8fafc !important;
  }

  /* Eliminar los estilos que cambian el color en modo claro */
  :root[data-theme="light"] .subtitle,
  :root[data-theme="light"] .technologies,
  html[data-theme="light"] .hero-section .subtitle,
  html[data-theme="light"] .hero-section .technologies {
    color: #f8fafc !important; /* Mantener el color claro siempre */
    opacity: 0.9 !important;
    text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
  }

  /* Estilos base para el hero section */
  .hero-section {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: calc(80px + 4rem);
    padding-bottom: 2rem;
  }

  .subtitle {
    color: #f8fafc;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .technologies {
    color: #f8fafc;
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  /* Forzar color claro en modo light */
  :root[data-theme="light"] .social-link {
    color: #f8fafc !important;
  }

  :root[data-theme="light"] .social-link:hover {
    color: var(--gradient-1) !important;
  }

  html {
    scroll-behavior: smooth;
  }

  .certifications-badges {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

  .certifications-badges a {
    width: 90px;
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    filter: grayscale(20%) brightness(1.1);
    position: relative;
  }

  /* Eliminar el pseudo-elemento que creaba el fondo */
  .certifications-badges :global(img) {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: all 0.3s ease;
  }

  .certifications-badges a:hover {
    transform: translateY(-3px);
    filter: grayscale(0%) brightness(1.2);
  }

  .certifications-badges a:hover :global(img) {
    filter: drop-shadow(0 4px 12px rgba(14, 165, 233, 0.3));
  }

  @media (max-width: 768px) {
    .certifications-badges {
      gap: 1rem;
    }
    
    .certifications-badges a {
      width: 70px;
      height: 70px;
    }
  }

  .menu-toggle {
    display: none; /* Oculto en desktop */
    background: none;
    border: none;
    color: var(--text);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1000;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block; /* Visible en móvil */
    }

    .nav-links {
      display: none;
      position: fixed;
      top: 60px; /* Altura del navbar */
      left: 0;
      right: 0;
      background: var(--navbar-bg-scrolled);
      padding: 1rem;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-links.active {
      display: flex;
    }

    .nav-link {
      width: 100%;
      text-align: center;
      padding: 0.75rem 0;
    }

    .theme-toggle {
      margin: 0.5rem 0;
    }
  }

  /* Preload de fuentes críticas */
  @font-face {
    font-family: 'Inter';
    font-weight: 700;
    font-display: swap;
    src: local('Inter Bold');
  }
</style>

<script>
  function handleTheme() {
    const themeToggle = document.getElementById('theme-toggle');
    const icon = themeToggle?.querySelector('i');
    
    // Asegurar que empezamos en modo oscuro
    if (!localStorage.getItem('theme')) {
      localStorage.setItem('theme', 'dark');
      document.documentElement.setAttribute('data-theme', 'dark');
    }
    
    // Establecer el tema inicial
    const currentTheme = localStorage.getItem('theme') || 'dark';
    document.documentElement.setAttribute('data-theme', currentTheme);
    
    // Establecer el icono inicial
    if (icon) {
      icon.className = currentTheme === 'dark' 
        ? 'fa-regular fa-sun' 
        : 'fa-regular fa-moon';
    }

    // Manejar el click
    themeToggle?.addEventListener('click', () => {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      // Cambiar el tema
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      
      // Cambiar el icono
      if (icon) {
        icon.className = newTheme === 'dark' 
          ? 'fa-regular fa-sun' 
          : 'fa-regular fa-moon';
      }
    });
  }

  // Ejecutar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', handleTheme);
  // Ejecutar cuando Astro complete la navegación
  document.addEventListener('astro:page-load', handleTheme);
</script>

<script>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      
      if (target) {
        const offset = 40;
        const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });
</script>

<script>
  // Smooth scroll para los enlaces del menú
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth'
        });
      }
    });
  });

  // Asegurarnos de que el script se ejecute después de que el DOM esté listo
  document.addEventListener('astro:page-load', () => {
    const navbar = document.querySelector('.navbar');
    
    const updateNavbar = () => {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
        navbar.style.backgroundColor = '#0f172a';
      } else {
        navbar.classList.remove('scrolled');
        navbar.style.backgroundColor = 'rgba(15, 23, 42, 0.85)';
      }
    };

    // Ejecutar inmediatamente
    updateNavbar();
    
    // Ejecutar al hacer scroll
    window.addEventListener('scroll', updateNavbar);
  });
</script>

<script>
  function initMobileMenu() {
    const menuToggle = document.getElementById('menu-toggle');
    const navLinks = document.getElementById('nav-links');
    const navLinksItems = document.querySelectorAll('.nav-link');

    // Toggle menu
    menuToggle?.addEventListener('click', () => {
      navLinks?.classList.toggle('active');
      // Cambiar el ícono
      const icon = menuToggle.querySelector('i');
      if (icon) {
        icon.classList.toggle('fa-bars');
        icon.classList.toggle('fa-times');
      }
    });

    // Cerrar menú al hacer click en un enlace
    navLinksItems.forEach(link => {
      link.addEventListener('click', () => {
        navLinks?.classList.remove('active');
        const icon = menuToggle?.querySelector('i');
        if (icon) {
          icon.classList.add('fa-bars');
          icon.classList.remove('fa-times');
        }
      });
    });

    // Cerrar menú al hacer scroll
    window.addEventListener('scroll', () => {
      if (navLinks?.classList.contains('active')) {
        navLinks.classList.remove('active');
        const icon = menuToggle?.querySelector('i');
        if (icon) {
          icon.classList.add('fa-bars');
          icon.classList.remove('fa-times');
        }
      }
    });
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  // Reinicializar cuando Astro complete la navegación
  document.addEventListener('astro:page-load', initMobileMenu);
</script>

<script>
  // Optimización de carga
  document.addEventListener('astro:page-load', () => {
    const title = document.querySelector('.main-title');
    if (title) {
      requestAnimationFrame(() => {
        title.style.opacity = '1';
        title.style.transform = 'translateY(0)';
      });
    }
  });
</script>