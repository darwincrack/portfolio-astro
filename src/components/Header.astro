---
import profileImage from '../images/profile-image.jpg';
---

<header class="header">
  <div id="particles-js"></div>

  <!-- Navbar fijo -->
  <nav class="navbar">
    <div class="container">
      <div class="navbar-content">
        <a href="/" class="logo">
          <span class="logo-text">DC</span>
        </a>
        <div class="nav-links">
          <a href="#sobre-mi" class="nav-link">Sobre mí</a>
          <a href="#blog" class="nav-link">Blog</a>
          <a href="#reconocimientos" class="nav-link">Reconocimientos</a>
          <a href="#habilidades" class="nav-link">Habilidades</a>
          <a href="#destacado" class="nav-link">Destacado</a>
          <a href="#contacto" class="nav-link">Contacto</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="hero-section">
    <div class="container text-center">
      <h1 class="main-title glow-effect">Darwin Cedeño</h1>
      <h2 class="subtitle">Full Stack Developer</h2>
      <p class="technologies">
        PHP • Laravel • JavaScript • React • Node.js • AWS
      </p>
      <div class="social-links">
        <a href="https://github.com/darwincrack/" class="social-link" title="GitHub" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>
        <a href="https://instagram.com/tuinstagram" class="social-link" title="Instagram" target="_blank">
          <i class="fa-brands fa-instagram"></i>
        </a>
      </div>
      <div class="cta-container">
        <a href="#contact-section" class="contact-btn">Contáctame</a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Variables de color actualizadas basadas en la web de referencia */
  :root {
    --gradient-1: #0ea5e9;  /* Sky blue */
    --gradient-2: #2563eb;  /* Blue */
    --gradient-3: #4f46e5;  /* Indigo */
    --background: #0f172a;  /* Dark blue */
    --text: #f8fafc;       /* Light gray */
    --navbar-bg-initial: rgba(15, 23, 42, 0.8);
    --navbar-bg-scrolled: #0f172a;
  }

  .header {
    background-color: var(--background);
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  #particles-js {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .navbar, .hero-section {
    position: relative;
    z-index: 2;
  }

  /* Logo */
  .logo {
    position: relative;
    z-index: 2;
    text-decoration: none;
  }

  .logo-path {
    fill: none;
    stroke: var(--gradient-1);
    stroke-width: 2;
    transition: all 0.3s ease;
  }

  .logo-text {
    fill: var(--text);
    font-size: 16px;
    font-weight: bold;
    font-family: 'Inter', sans-serif;
  }

  .logo:hover .logo-path {
    stroke: var(--gradient-3);
    transform: rotate(45deg);
  }

  /* Actualización de estilos existentes */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(15, 23, 42, 0.85) !important;
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .navbar.scrolled {
    background-color: #0f172a !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
  }

  .navbar.scrolled .nav-link {
    color: white !important;
    opacity: 0.9;
  }

  .navbar.scrolled .nav-link:hover {
    opacity: 1;
    color: var(--gradient-1) !important;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .logo-text {
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 1.5rem;
    font-weight: 700;
    padding: 0.5rem;
    border: 2px solid transparent;
    border-image: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    border-image-slice: 1;
    transition: all 0.3s ease;
  }

  .logo:hover .logo-text {
    transform: translateY(-2px);
    text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
    padding-left: 3rem;
  }

  .nav-link {
    color: white !important;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0.9;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    opacity: 1;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .hero-section {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: calc(80px + 8rem); /* Navbar height (80px) + espacio adicional (8rem) */
    padding-bottom: 4rem;
  }

  .social-link {
    color: var(--text);
    font-size: 1.25rem;
    transition: color 0.3s ease;
  }
  
  .social-link:hover {
    color: var(--gradient-1);
  }

  .contact-btn {
    background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
    color: var(--text);
    padding: 0.75rem 2.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
  }

  .main-title {
    font-size: 6rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
    animation: glow 3s ease-in-out infinite;
  }

  @keyframes glow {
    0% {
      text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
      color: var(--text);
    }
    50% {
      text-shadow: 0 0 20px rgba(14, 165, 233, 0.5),
                   0 0 30px rgba(14, 165, 233, 0.3);
      color: #ffffff;
    }
    100% {
      text-shadow: 0 0 10px rgba(14, 165, 233, 0.3);
      color: var(--text);
    }
  }

  .subtitle {
    font-size: 2rem;
    color: var(--text);
    font-weight: 600;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .technologies {
    color: var(--text);
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.7;
    letter-spacing: 0.5px;
    margin-bottom: 2rem;
  }

  .cta-container {
    margin-top: 2rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 2rem 0;
  }

  .social-link {
    color: var(--text);
    font-size: 1.5rem;
    transition: all 0.3s ease;
    opacity: 0.8;
  }
  
  .social-link:hover {
    color: var(--gradient-1);
    transform: translateY(-2px);
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-section {
      padding-top: calc(60px + 4rem); /* Ajuste para móviles */
    }

    .main-title {
      font-size: 3.5rem;
    }
    
    .subtitle {
      font-size: 1.5rem;
    }

    .contact-btn {
      padding: 0.75rem 2rem;
      font-size: 1rem;
    }

    .nav-links {
      display: none; /* En móvil necesitarás un menú hamburguesa */
    }

    /* Agregar botón de menú hamburguesa */
    .menu-toggle {
      display: block;
      font-size: 1.5rem;
      color: var(--text);
      cursor: pointer;
    }
  }

  /* Estilos para el menú móvil */
  @media (max-width: 768px) {
    .nav-links.active {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: rgba(15, 23, 42, 0.95);
      padding: 1rem;
      gap: 1rem;
      backdrop-filter: blur(10px);
    }
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo {
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
    padding-left: 3rem;
  }
</style>

<script is:inline>
  const initParticles = () => {
    particlesJS('particles-js', {
      particles: {
        number: {
          value: 80,
          density: {
            enable: true,
            value_area: 800
          }
        },
        color: {
          value: "#d1fae5"
        },
        shape: {
          type: "circle"
        },
        opacity: {
          value: 0.5,
          random: false,
          anim: {
            enable: false,
            speed: 1,
            opacity_min: 0.3,
            sync: false
          }
        },
        size: {
          value: 3,
          random: true,
          anim: {
            enable: false,
            speed: 40,
            size_min: 0.1,
            sync: false
          }
        },
        line_linked: {
          enable: true,
          distance: 150,
          color: "#d1fae5",
          opacity: 0.4,
          width: 1
        },
        move: {
          enable: true,
          speed: 3,
          direction: "none",
          random: false,
          straight: false,
          out_mode: "bounce",
          bounce: false,
          attract: {
            enable: false,
            rotateX: 600,
            rotateY: 1200
          }
        }
      },
      interactivity: {
        detect_on: "window",
        events: {
          onhover: {
            enable: true,
            mode: "repulse"
          },
          onclick: {
            enable: true,
            mode: "push"
          },
          resize: true
        },
        modes: {
          grab: {
            distance: 400,
            line_linked: {
              opacity: 0.6
            }
          },
          repulse: {
            distance: 200,
            duration: 0.4
          },
          push: {
            particles_nb: 4
          },
          remove: {
            particles_nb: 2
          }
        }
      },
      retina_detect: true
    });
  };

  // Ejecutar cuando el DOM esté listo
  document.addEventListener("DOMContentLoaded", initParticles);
  // Ejecutar cuando Astro complete la navegación
  document.addEventListener("astro:page-load", initParticles);
</script>

<script>
  // Smooth scroll para los enlaces del menú
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth'
        });
      }
    });
  });

  // Asegurarnos de que el script se ejecute después de que el DOM esté listo
  document.addEventListener('astro:page-load', () => {
    const navbar = document.querySelector('.navbar');
    
    const updateNavbar = () => {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
        navbar.style.backgroundColor = '#0f172a';
      } else {
        navbar.classList.remove('scrolled');
        navbar.style.backgroundColor = 'rgba(15, 23, 42, 0.85)';
      }
    };

    // Ejecutar inmediatamente
    updateNavbar();
    
    // Ejecutar al hacer scroll
    window.addEventListener('scroll', updateNavbar);
  });
</script>