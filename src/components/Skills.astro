---
const topSkills = [
  { name: "PHP", years: "10 años", percent: 100 },
  { name: "JavaScript", years: "5 años", percent: 100 },
  { name: "WordPress", years: "5 años", percent: 100 }
];

const otherSkills = [
  "Laravel", "CodeIgniter", "MySQL", "Python", "Flask", "HTML5", "CSS3",
  "Woocommerce", "Prestashop", "Shopify", "AngularJS", "Bootstrap", "Visual Basic",
  "LINUX", "Maria DB", "PostgreSQL", "SQL Server", "Jquery", "SEO",
  "SCRUM", "GIT", "POO", "MVC", "AMP"
];
---

<section id="skills-section" class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-5">Habilidades Profesionales</h2>
    
    <!-- Top Skills -->
    <div class="mb-5">
      <h3 class="text-center h4 mb-4">Top Habilidades</h3>
      <div class="row g-4">
        {topSkills.map(skill => (
          <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm">
              <div class="card-body text-center">
                <div class="skill-circle mb-3">
                  <div class="progress-ring">
                    <svg width="120" height="120">
                      <circle 
                        class="progress-ring__circle"
                        stroke="#0d6efd"
                        stroke-width="8"
                        fill="transparent"
                        r="52"
                        cx="60"
                        cy="60"
                      />
                    </svg>
                    <span class="position-absolute top-50 start-50 translate-middle">
                      {skill.years}
                    </span>
                  </div>
                </div>
                <h4 class="h5 mb-0">{skill.name}</h4>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Other Skills -->
    <div>
      <h3 class="text-center h4 mb-4">Otras Habilidades</h3>
      <div class="text-center">
        {otherSkills.map(skill => (
          <span class="badge bg-primary me-2 mb-2 p-2">{skill}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .progress-ring {
    position: relative;
    display: inline-block;
  }

  .progress-ring__circle {
    transform: rotate(-90deg);
    transform-origin: 50% 50%;
    stroke-dasharray: 326.726;
    stroke-dashoffset: 0;
  }

  .skill-circle {
    position: relative;
  }
</style>