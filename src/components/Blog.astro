---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 4);

---

<section id="blog-section" class="latest-news-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Últimas Noticias</h2>
        <div class="row">
            {posts.map(post => (
                <div class="col-lg-3 col-md-6 mb-4">
                    <a href={`/blog/${post.slug}/`} class="card-link">
                        <div class="card h-100">
                            {post.data.image && (
                                <img 
                                    src={post.data.image.url} 
                                    alt={post.data.image.alt || `Imagen ilustrativa del artículo: ${post.data.title}`} 
                                    class="card-img-top"
                                    width={400}
                                    height={200}
                                    loading="lazy"
                                    decoding="async"
                                />
                            )}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{post.data.title}</h5>
                                <p class="card-text flex-grow-1">
                                    {post.data.description.slice(0, 100)}...
                                </p>
                                <span class="read-more mt-auto">Leer más &rarr;</span>
                            </div>
                        </div>
                    </a>
                </div>
            ))}
        </div>
        <div class="text-center mt-5">
            <a href="/blog" class="btn btn-outline-primary">
                Ver más posts
            </a>
        </div>
    </div>
</section>



<style>
    .latest-news-section {
        padding: 4rem 0;
        background-color: var(--primary-bg);
    }
    .section-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        margin-bottom: 3rem;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }
    .card-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }
    .card {
        background: var(--secondary-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .card-title,
    .card-text {
        color: var(--text);
    }
    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .card-text {
        flex-grow: 1;
        opacity: 0.8;
    }
    .read-more {
        margin-top: 1rem;
        font-weight: 600;
        color: var(--text);
    }
    .btn-outline-primary {
        color: var(--gradient-1);
        border: 2px solid var(--gradient-1);
        padding: 0.5rem 2rem;
        border-radius: 2rem;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-outline-primary:hover {
        background: linear-gradient(45deg, var(--gradient-1), var(--gradient-2));
        border-color: transparent;
        color: white;
        transform: translateY(-2px);
    }
</style>