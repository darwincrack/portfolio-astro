    period: "2014 - 2016"
  },
  {
    degree: "T.S.U en Informática",
    institution: "Instituto Universitario de Tecnología Tomas Lander",
    period: "2009 - 2011"
  }
];

const certifications = [
  {
    title: "Certificado profesional de Gestión de Proyectos de Google",
    institution: "Google",
    year: "2024",
    link: "https://coursera.org/share/a820bf9db7de8cbd50756a224bd89d2f"
  },
  {
    title: "Google AI Essentials",
    institution: "Google",
    year: "2024",
    link: "https://coursera.org/share/7b8f334438e22ae14f862edd3ce45759"
  },

  {
    title: "Microsoft Certified: Azure Fundamentals",
    institution: "Microsoft",
    year: "2022",
    link: "https://www.credly.com/badges/7f36d2ec-e6eb-4d9a-bfa1-8ba960a750af"
  },

  {
    title: "JavaScript Algorithms and Data Structures",
    institution: "freeCodeCamp",
    year: "2022",
    link: "https://freecodecamp.org/certification/fcc943de171-3a0f-4d00-b402-627097bd66d9/javascript-algorithms-and-data-structures"
  },

  {
