    institution: "CódigoFacilito",
    year: "2022",
  },

  {
    title: "Curso de Docker",
    institution: "CódigoFacilito",
    year: "2022",
  },
  {
    title: "Curso de introducción a Machine Learning",
    institution: "CódigoFacilito",
